                <div id="videotutorials"><figure class="shadow"><img id="kaz" src="https://www.greatdanegraphics.com/content/images/thumbs/0021499_flag-eagle.png" /></figure></div>

            </div>

        </div>
        <div id="kazda"><img src="~/Content/Images/Avatars/Kazdaglis.jpg" /></div>
    </section>
    <section>

        <div class="embiggen">Our Team</div>
        <div id="first"></div>
        <div class="row">
            <div class="containers col-lg-6 col-md-6">

                <div class="pic" id="Anestis"></div>


            </div>


            <div id="one" class="col-md-4 manage-text-aligner" style="padding-bottom:50px"></div>

        </div>
        <div id="second"></div>
        <div class="row">
            <div class="containers col-lg-6 col-md-6">

                <div class="pic" id="Gerogiannis"></div>


            </div>
            <div id="two" class="col-md-4 manage-text-aligner" style="padding-bottom:50px"></div>

        </div>
        <div id="third"></div>
        <div class="row">
            <div class="containers col-lg-6 col-md-6">
                <div class="pic" id="Koronaios"></div>




            </div>
            <div id="three" class="col-md-4 manage-text-aligner" style="padding-bottom:50px"></div>
        </div>

        <div id="fourth"></div>
        <div class="row">
            <div class="containers col-lg-6 col-md-6">
                <div class="pic" id="Kannelos"></div>


            </div>
            <div id="four" class="col-md-4 manage-text-aligner" style="padding-bottom:50px"></div>

        </div>
        <div id="fifth"></div>
        <div class="row">
            <div class="containers col-lg-6 col-md-6">

                <div class="pic"></div>


            </div>
            <div id="five" class="col-md-4 manage-text-aligner" style="padding-bottom:50px"></div>


        </div>
        
    </section>
    <script>
        $(document).ready(function () {
            function delay() {
                function kazda() {
                    $('#kazda').animate({ right: '45%' }, 1500);
                }
                setTimeout(kazda(), 1500);
                function kazdaUp() {
                    $('#kazda').animate({ bottom: '20%' }, 200);
                }
                setTimeout(kazdaUp(), 200);
                function kaz() {
                    $('#kaz').attr("src", "/Content/Images/Avatars/Kazdaglis.jpg")
                }
                setTimeout(kaz, 1700);
                function kazdaDown() {
                    $('#kazda').animate({ bottom: 0 }, 200);
                }
                setTimeout(kazdaDown(), 200);
                $('#kazda').animate({ right: '100%' }, 400);
            };
            setTimeout(delay, 2500);
            
        });
    </script>
</body>
